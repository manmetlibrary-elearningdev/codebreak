    <!-- Final Codeword Entry Section -->
    <div class="question-section">
        <h2>Enter the final codeword:</h2>
        <div class="instructions">
            <p>
                To solve the code:
                <li>Take the highlighted letters from your previous answers.</li>
                <li>Arrange these letters in order according to their corresponding numbers (1,2,3, etc).</li>
                <li>The codeword may be more than one word.</li>
            </p>
        </div>
        
        <!-- Input for final codeword guess -->
        <input class="answer-input" id="codeword-input" type="text" placeholder="Type your answer here" oninput="fillAnswer('codeword', 'CODEWORD_HERE')">
        
        <!-- Answer grid for the final codeword -->
        <div class="answer-grid">
            <div class="grid-column">
                <div class="number">1</div> <!-- Numbered box -->
                <div class="letter" id="codeword-0"></div> <!-- Letter box -->
            </div>
            <!-- Add more numbered boxes for each letter in the codeword -->
        </div>
        
        <!-- Button to check if the codeword is correct -->
        <button onclick="checkCodeword()">Check Codeword</button>
        <div id="codeword-feedback" class="feedback"></div>
    </div>

    <script>
        const finalCodeword = "YOUR_FINAL_CODEWORD";

        // Function to fill the answer grid as users type
        function fillAnswer(questionId, correctAnswer) {
            const input = document.getElementById(`${questionId}-input`).value.toUpperCase();
            const correctAnswerArr = correctAnswer.split('');

            for (let i = 0; i < correctAnswerArr.length; i++) {
                const letterBox = document.getElementById(`${questionId}-${i}`);
                letterBox.textContent = input[i] || ''; 
            }
        }

        // Function to check the final codeword
        function checkCodeword() {
            const codewordInput = [...Array(10).keys()].map(i => document.getElementById(`codeword-${i}`).textContent).join('');

            const feedbackElement = document.getElementById('codeword-feedback');
            if (codewordInput === finalCodeword) {
                feedbackElement.textContent = '✔️ Correct!';
                feedbackElement.classList.add('correct');
            } else {
                feedbackElement.textContent = '❌ Incorrect! Try again.';
                feedbackElement.classList.add('incorrect');
            }
        }
    </script>
